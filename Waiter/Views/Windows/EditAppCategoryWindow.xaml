<ui:UiWindow
    x:Class="Waiter.Views.Windows.EditAppCategoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Waiter.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Waiter.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Login"
    Width="600"
    Height="240"
    d:DataContext="{d:DesignInstance local:EditAppCategoryWindow,
                                     IsDesignTimeCreatable=True}"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ui:TitleBar
            Grid.Row="0" Grid.Column="0"
            Grid.ColumnSpan="2"
            Title="{Binding ViewModel.TitleStr, Mode=OneWay}" />

        <TextBlock
            Grid.Row="1" Grid.Column="0"
            VerticalAlignment="Center"
            Margin="20,0,20,0"
            FontSize="18"
            Text="Name" />
        <ui:TextBox
            Grid.Row="1" Grid.Column="1"
            Margin="0,0,20,0"
            VerticalAlignment="Center"
            FontSize="18"
            TabIndex="0"
            PlaceholderText="Name..."
            Text="{Binding ViewModel.AppCategoryName, Mode=TwoWay}" />

        <StackPanel
            Grid.Row="3" Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            FlowDirection="RightToLeft"
            Margin="0,0,40,0">
            <Button
                VerticalAlignment="Top"
                Command="{Binding ViewModel.BtnClickCommand}"
                IsDefault="True"
                FontSize="18"
                TabIndex="2"
                Content="{Binding ViewModel.ButtonStr}" />
        </StackPanel>
    </Grid>
</ui:UiWindow>